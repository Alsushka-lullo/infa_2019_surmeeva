from tkinter import *
from random import randrange as rnd, choice
import time


sum_goals, sum_failes
sum_goals = 0
sum_failes = 0


def click(event):
    global sum_goals, sum_failes
    if (event.x - x) ** 2 + (event.y - y) ** 2 <= r ** 2:
        sum_goals += 1
    else:
        sum_failes += 1


def on_closing():  # do smth when close prog
    return sum_goals, sum_failes
    root.destroy()





root.protocol("WM_DELETE_WINDOW", on_closing)   # required thing

new_ball()
our_canv.bind('<Button-1>', click)
mainloop()
